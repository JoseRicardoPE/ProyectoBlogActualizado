<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('partials/myHead.ejs') %>
    <title>Edit Article</title>
  </head>
  <body>
    <%- include ('partials/navbar') %>
    <div class="main container main my-5 vh-100">
      <form action="/admin/article/<%= articleIndividual.id %>?_method=PUT" method="POST" class="shadow p-3 mb-5 bg-body rounded border border-1">
        <div class="card-header mb-3 border border-2 d-flex justify-content-center align-items-center">
          <i class="fas fa-pen mx-1"></i> Edit Article
        </div>
        <div class="mb-3 px-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            name="title"
            class="title"
            id="title"
            value="<%= articleIndividual.title %>"
            placeholder="Enter title..."
          />
        </div>
        <div class="mb-3 px-3">
          <label for="content" class="form-label">Content</label>
          <textarea
            class="form-control"
            class="content"
            id="content"
            name="content"
            rows="3"
          ><%= articleIndividual.content %> </textarea>
        </div>
        <div class="mb-3 px-3">
          <label for="fileImage" class="form-label">Upload File</label>
          <input
            class="form-control"
            type="file"
            id="fileImage"
            class="fileImage"
            name="fileImage"
          /><%= articleIndividual.image %> 
        </div>
        <div class="mb-3 px-3">
          <label for="createDate" class="form-label">Date</label>
          <input
            class="form-control"
            type="date"
            id="createDate"
            class="createDate"
            name="createDate"
          /><%= articleIndividual.createDate %> 
        </div>

        <div class="mb-3 px-3">
            <button type="submit" class="btn btn-success btn-sm">
              <i class="fas fa-check"></i> Save
            </button>
        </div>
      </form>
      <div class="my-3">
        <a href="/admin" class="mx-6 text-decoration-none"
          ><i class="fas fa-arrow-left"></i> Back</a
        >
      </div>
    </div>
    <%- include ('partials/footer') %>

    <script
      src="https://kit.fontawesome.com/849e8c00db.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
