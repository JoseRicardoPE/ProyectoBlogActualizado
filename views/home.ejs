<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('partials/myHead.ejs') %>
    <title>Home</title>
  </head>
  <body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">  
      <main class="main__container row my-5">
        <article class="main__article col-md-9">
          <h3 class="mb-5 text-center fw-bold">Blog Hack Academy</h3>
          <div class="row">
            <% for(const article of articles) { %>
              <div class="card mb-3 col-md-5 ms-5">
                <img src="<%= article.image %> " class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title fw-bold"><a href="#" class="text-decoration-none link-dark"><%= article.title %></a> </h5>
                  <p class="card-text" style="font-size: 14px;"><%= article.content.slice(0, 150) + '...' %> </p>
                  <p class="card-text fst-italic fw-lighter" style="font-size: 12px;"><%= article.createDate %> </p>
                </div>
                <div class="card-button pb-3 ps-3">
                  <a href="/article/<%= article.id %> " class="btn btn-outline-dark btn-sm">Read More</a>
                </div>
              </div>
              
            <% } %>
          </div>
        </article>
        <aside class="container aside col-md-3 mt-2">
          <%- include ('partials/sidebar.ejs') %>
        </aside>
      </main>
    </div>
    <%- include ('partials/footer.ejs') %>
    

    <script
      src="https://kit.fontawesome.com/849e8c00db.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
