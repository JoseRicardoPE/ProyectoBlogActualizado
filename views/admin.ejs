<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('partials/myHead') %> 
    <title>Admin</title>
</head>
<body>
    <%- include ('partials/navbar') %>
    <main class="container main"> 
        <div class="content__title d-flex justify-content-between align-items-center">
            <h1 class="fw-bold my-4">Articles List</h1>
            <div class="content__btn">
                <a href="/admin/newArticle" class="btn btn-outline-dark">
                    <i class="fas fa-plus"></i>
                     Add Article
                </a>
            </div>
        </div>
        <table class="table table-bordered align-middle text-center">
            <thead class="border-2 border-dark">
              <tr>
                <th scope="col">id Article</th>
                <th scope="col">Title Article</th>
                <th scope="col">Content</th>
                <th scope="col">Create Date</th>
                <th scope="col"><i class="fas fa-solid fa-wrench"></i> Settings</th>
              </tr>
            </thead>
            <tbody class="border border-2">
                <% for( const data of articles ) { %>
                    <tr> 
                        <td> <%- data.id %> </td>
                        <td> <%- data.title %> </td>
                        <td> <%- data.content %> </td>
                        <td> <%- data.createDate %> </td>
                        <td class="w-25">
                            <div class="content__btn d-flex justify-content-evenly">
                                <a href="/admin/article/<%= data.id %>  " class="btn btn-primary btn-sm"><i class="fas fa-pen"></i> Edit Article</a>
                                <form method="POST" action="/admin/delete/<%= data.id %>?_method=DELETE">
                                    <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete Article</a>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% } %>
            </tbody>
          </table>
        <div class="content__btn d-flex my-3">
            <a href="/" class="btn btn-outline-dark btn-sm"><i class="fas fa-home"></i> Home</a>
        </div>
    </main>
    <%- include ('partials/footer') %>

    <script src="https://kit.fontawesome.com/849e8c00db.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>