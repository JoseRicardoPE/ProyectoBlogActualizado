<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('partials/myHead.ejs') %>
    <title>New User</title>
  </head>
  <body>
    <%- include ('partials/navbar') %>
    <div class="main container main my-5 vh-100">
      <form action="/login" method="POST" class="shadow p-3 mb-5 bg-body rounded border border-1">
        <div class="card-header mb-3 border border-2 d-flex justify-content-center align-items-center">
          <i class="fas fa-user mx-1" style="font-size: 1.3rem"></i> <span class="h3 fw-bold"> Login</span>
        </div>
        <div class="mb-3 px-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
            id="email"
            placeholder="Enter email..."
          />
        </div>
        <div class="mb-3 px-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            name="password"
            id="password"
            placeholder="Enter password..."
          />
        </div>
    
        <div class="mb-3 px-3">
          <button type="submit" class="btn btn-success btn-sm">
            <i class="fas fa-key"></i> Login
          </button>
        </div>
      </form>
      <div class="mb-3 px-3 d-flex justify-content-center my-4">
          <a href="/" class="btn btn-outline-dark btn-sm mx-6"
            ><i class="fas fa-home"></i> home</a
          >
      </div>
    </div>
    <%- include ('partials/footer') %>

    <script
      src="https://kit.fontawesome.com/849e8c00db.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
